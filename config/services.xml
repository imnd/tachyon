<services>
    <service id="FrontController" class="\tachyon\FrontController">
        <property name="cache">
            <ref id="OutputCache"/>
        </property>
        <property name="msg">
            <ref id="Message"/>
        </property>
        <property name="config">
            <ref id="Config"/>
        </property>
    </service>

    <service id="DOMDocument" class="\DOMDocument"></service>
    <service id="XSLTProcessor" class="\XSLTProcessor"></service>

    <service id="Config" class="\tachyon\Config" singleton="true"></service>
    <service id="Cookie" class="\tachyon\components\Cookie" singleton="true">
        <property name="duration">
            <value>30</value>
        </property>
    </service>
    <service id="Encrypt" class="\tachyon\components\Encrypt" singleton="true">
        <property name="algorithm">
            <value>md5</value>
        </property>
        <property name="salt">
            <value>sdnv5ln0vlz8nbl4emr</value>
        </property>
    </service>
    <service id="Csrf" class="\tachyon\components\Csrf" singleton="true"></service>
    <service id="OutputCache" class="\tachyon\cache\Output" singleton="true"></service>
    <service id="DbCache" class="\tachyon\cache\Db" singleton="true"></service>

    <service id="AssetManager" class="\tachyon\components\AssetManager"></service>
    <service id="FilesManager" class="\tachyon\components\FilesManager"></service>
    <service id="Message" class="\tachyon\components\Message" singleton="true">
        <property name="lang">
            <ref id="Lang"/>
        </property>
    </service>
    <service id="Lang" class="\tachyon\components\Lang" singleton="true">
        <property name="cookie">
            <ref id="Cookie"/>
        </property>
    </service>

    <service id="DateTime" class="\tachyon\behaviours\DateTime"></service>
    <service id="List" class="\tachyon\behaviours\ListBehaviour"></service>
    <service id="Active" class="\tachyon\behaviours\Active"></service>

    <service id="Html" class="\tachyon\components\html\Html" singleton="true"></service>
    <service id="FormBuilder" class="\tachyon\components\html\FormBuilder">
        <property name="assetManager">
            <ref id="AssetManager"/>
        </property>
        <property name="csrf">
            <ref id="Csrf"/>
        </property>
        <property name="html">
            <ref id="Html"/>
        </property>
        <property name="view">
            <ref id="View"/>
        </property>
    </service>
    <service id="Widget" class="\tachyon\components\widgets\Widget">
        <property name="assetManager">
            <ref id="AssetManager"/>
        </property>
        <property name="msg">
            <ref id="Message"/>
        </property>
    </service>

    <service id="Grid" class="\tachyon\components\widgets\grid\Grid">
        <property name="msg">
            <ref id="Message"/>
        </property>
    </service>
    <service id="Datepicker" class="\tachyon\components\widgets\Datepicker"></service>
    <service id="Menu" class="\app\components\widgets\menu\Menu"></service>

    <service id="XsltView" class="\tachyon\XsltView">
        <property name="xsltProcessor">
            <ref id="XsltProcessor"/>
        </property>
    </service>
    <service id="View" class="\tachyon\View">
        <property name="assetManager">
            <ref id="AssetManager"/>
        </property>
        <property name="msg">
            <ref id="Message"/>
        </property>
        <property name="html">
            <ref id="Html"/>
        </property>
    </service>
    <service id="Controller" class="\tachyon\Controller">
        <property name="msg">
            <ref id="Message"/>
        </property>
        <property name="cookie">
            <ref id="Cookie"/>
        </property>
        <property name="lang">
            <ref id="Lang"/>
        </property>
        <property name="dbFactory">
            <ref id="DbFactory"/>
        </property>
        <property name="view">
            <ref id="View"/>
        </property>
    </service>

    <service id="DbFactory" class="\tachyon\db\dbal\DbFactory" singleton="true">
        <property name="msg">
            <ref id="Message"/>
        </property>
    </service>

    <service id="Join" class="\tachyon\db\Join"></service>
    <service id="Alias" class="\tachyon\db\Alias"></service>
    <service id="Relation" class="\tachyon\db\activeRecord\Relation"></service>
    <service id="JoinRelation" class="\tachyon\db\activeRecord\JoinRelation"></service>
    <service id="HasoneRelation" class="\tachyon\db\activeRecord\HasoneRelation"></service>
    <service id="HasmanyRelation" class="\tachyon\db\activeRecord\HasmanyRelation"></service>
    <service id="ManytomanyRelation" class="\tachyon\db\activeRecord\ManytomanyRelation"></service>

    <service id="ActiveRecord" class="\tachyon\db\activeRecord\ActiveRecord">
        <property name="cache">
            <ref id="DbCache"/>
        </property>
        <property name="alias">
            <ref id="Alias"/>
        </property>
        <property name="dbFactory">
            <ref id="DbFactory"/>
        </property>
        <property name="join">
            <ref id="Join"/>
        </property>
        <property name="terms">
            <ref id="Terms"/>
        </property>
    </service>

    <service id="Terms" class="tachyon\db\Terms"></service>

    <service id="Model" class="\tachyon\Model">
        <property name="validator">
            <ref id="Validator"/>
        </property>
    </service>

    <service id="Validator" class="\tachyon\components\Validator">
        <property name="msg">
            <ref id="Message"/>
        </property>
        <property name="csrf">
            <ref id="Csrf"/>
        </property>
    </service>

    <service id="Component" class="\tachyon\Component">
        <property name="config">
            <ref id="Config"/>
        </property>
    </service>

    <service id="DbContext" class="\tachyon\db\dataMapper\DbContext"></service>

    <service id="Entity" class="\tachyon\db\dataMapper\Entity">
        <property name="dbContext">
            <ref id="DbContext"/>
        </property>
        <property name="validator">
            <ref id="Validator"/>
        </property>
    </service>

    <service id="Repository" class="\tachyon\db\dataMapper\Repository">
        <property name="persistence">
            <ref id="Persistence"/>
        </property>
        <property name="terms">
            <ref id="Terms"/>
        </property>
    </service>

    <service id="Persistence" class="\tachyon\db\dataMapper\Persistence">
        <property name="dbFactory">
            <ref id="DbFactory"/>
        </property>
    </service>
</services>